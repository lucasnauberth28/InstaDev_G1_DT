@using InstaDev_G1_DT.Models
@{
    ViewData["Title"] = "Perfil";
}

<header class="menu">
    <section class="nav">
        <div class="logo">
            <img src="img/Instadev.png" alt="Logo do Instadev">
        </div>

        <div class="search">
            <button class="submit-lupa" type="submit">
                <i class="fa fa-search"></i>
            </button>
            <input type="text" placeholder="Pesquisar" class="search-input" />

        </div>

        <div class="menu-btn">
            <i class="fas fa-home"></i>
            <i class="far fa-paper-plane"></i>
            <i class="far fa-compass"></i>
            <i class="far fa-heart"></i>
            <div class="perfil1">
                <img src="img/thank-you 1.png" alt="Foto de perfil">
            </div>
        </div>
    </section>
</header>
<main>
    <section class="biografia">
        <div class="bio">
            <div class="perfil2">
                <img src="img/thank-you 2.png" alt="Foto de Perfil">
            </div>

            <div class="descricao-perfil">
                <h2>yes_baby</h2>
                <div class="pss">
                    <p>1 Publicações</p>
                    <a href="#">100 seguindo</a>
                    <a href="#">2 seguidores</a>
                </div>
                <div class="edicao">
                    <h4>Marcos Jeeves</h4>
                    <a href="#">Editar perfil</a>
                </div>
            </div>
        </div>
    </section>
    <hr>
    <section class="public">
        <div>
            <div class="picture">
                <img src="img/icone 1.png" alt="Publicações">
                <h1>Publicações</h1>
            </div>
            <div class="publicacao">
                <div class="img-publicacao">
                    <img src="img/baby.png" alt="">
                </div>
                <div class="descricao-foto">
                    <div class="foto-perfil-lugar">

                        <div>
                            <img src="img/thank-you 2.png" alt="Perfil">
                        </div>
                        <div class="desc-text">
                            <h1><a>Marcos Jeeves</a></h1>
                            <p><a href="#">Los Angeles, Uruguai</a></p>
                        </div>
                    </div>


                    <div class="botao">
                        <div class="content-txt">
                            <div class="content">
                                <i onclick="Toggle()" id="btn" class="far fa-heart"></i>
                            </div>
                            <span class="numb"></span>
                            <span class="text">Curtidas</span>
                        </div>
                    </div>

                    <div class="resto">
                        <p>Ver todos os 69 Comentários</p>
                    </div>
                    @foreach (Comments comments in ViewBag.Comments)
                    {
                        <div class="coments">
                            <div class="title">
                                <h6>nome</h6>
                            </div>
                            <div class="txt">
                                <p>@comments.Message</p>
                                <p class="delet"><a class="delete" asp-controller="Profile" asp-action="Delete"
                                        asp-route-id="@comments.IdComment"><img class="delete-img" src="img/lixo.png"></a>
                                </p>
                            </div>
                        </div>
                    }

                    

                    <div class="coments2">
                        <form method="POST" action='@Url.Action("Comment")'>
                            <input required name="Message" class="comentario" placeholder="Digite aqui" type="text">
                            <button type="submit" class="bbtn">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
    </section>
</main>
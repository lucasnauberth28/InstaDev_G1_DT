<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstaDev</title>
    <link href="//db.onlinewebfonts.com/c/6d32b8e06f40fb7698cfb714b9e7975d?family=BillabongW00-Regular" rel="stylesheet"
        type="text/css" />
    <link href="//db.onlinewebfonts.com/c/623c7118249e082fe87a78e08506cb4b?family=Segoe+UI" rel="stylesheet"
        type="text/css" /> @* Link adicionado pelo Apolinário (27.01.2021 | 16h50min) *@

    @switch (@ViewData["Title"])
    {
        case "Cadastro":
            <link rel="stylesheet" href="~/css/register.css" /> @* Pasta do CSS mudada para a "estilo.css" *@
            break;

        case "Login":
            <link rel="stylesheet" href="~/css/login.css" />
            break;
        
        case "Perfil":
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
            <link rel="stylesheet" href="~/css/profile.css">
            break;

        default:
            break;
    }

</head>

<body>
    <header class="menu">
        <section class="nav">
            <div class="logo">
                <img src="~/img/Instadev.png" alt="Logo do Instadev" >
            </div>

            <div class="search"> 
                <button class="submit-lupa" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <input type="text" placeholder="Pesquisar" class="search-input"/>

            </div>

            <div class="menu-btn">
                    <i class="fas fa-home"></i>
                    <i class="far fa-paper-plane"></i>
                    <i class="far fa-compass"></i>
                    <i class="far fa-heart"></i>
                <div class="perfil1">
                    <img src="img/thank-you 1.png" alt="Foto de perfil">
                </div>
            </div>
        </section>
    </header>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
